@model ChangePasswordViewModel

<h2 class="text-center">Change password</h2>

<div class="row">
    <div class="col-12">
        <form method="POST" asp-action="ChangePassword">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.OldPassword"></label>
                <input class="form-control" asp-for="@Model.OldPassword" />
                <span asp-validation-for="@Model.OldPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input class="form-control" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input class="form-control" asp-for="@Model.ConfirmPassword" />
                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
            </div>

            <button class="btn btn-success" type="submit">Change</button>

        </form>
    </div>
</div>