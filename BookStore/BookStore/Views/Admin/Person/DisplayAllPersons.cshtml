@model IEnumerable<Person>

<h1 class="text-center">@ViewBag.Title</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>First name</td>
        <td>Last name</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>

    @foreach (var person in Model)
    {
        <tr>
            <td>@person.Id</td>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
            <td><a asp-controller="Person" asp-action="EditPerson" asp-route-id="@person.Id">Edit</a></td>
            <td><a onclick="return confirm('Do you really want to delete this item ?')" 
                   asp-controller="Person" asp-action="DeletePerson" asp-route-id="@person.Id"> Delete </a></td>
        </tr>
     }
</table>

<a class="text-light btn btn-success" asp-controller="Person" asp-action="CreatePerson"> Create person </a>
