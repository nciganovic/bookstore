@model Person

<h1 class="text-center">Create new person</h1>

<form asp-controller="Person" asp-action="EditPerson" method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input class="form-control" asp-for="@Model.FirstName" value="@Model.FirstName" />
        <span class="text-danger" asp-validation-for="@Model.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input class="form-control" asp-for="@Model.LastName" value="@Model.LastName" />
        <span class="text-danger" asp-validation-for="@Model.LastName"></span>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>

    <div class="text-danger" asp-validation-summary="All">

    </div>
</form>
