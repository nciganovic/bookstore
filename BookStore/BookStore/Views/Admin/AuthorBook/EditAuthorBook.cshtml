@model AuthorBookViewModel

<h1 class="text-center">Edit author book</h1>

<form asp-controller="AuthorBook" asp-action="EditAuthorBook" method="post">
    
    <div>
        <input type="hidden" class="form-control" asp-for="@Model.AuthorBook.Id" value="@Model.AuthorBook.Id" />
    </div>
    
    <div>
        <select class="custom-select" asp-for="@Model.AuthorBook.AuthorId">
            <option value="0">Select author</option>
            @foreach (var author in Model.AllAuthors)
            {
                if (Model.AuthorBook.AuthorId == author.Id)
                {
                    <option selected value="@author.Id"> @author.FullName </option>
                }
                else
                {
                    <option value="@author.Id"> @author.FullName </option>
                }
            }
        </select>
        <span class="text-danger" asp-validation-for="@Model.AuthorBook.AuthorId"></span>
    </div>

    <div class="mt-3">
        <select class="custom-select" asp-for="@Model.AuthorBook.BookId">
            <option value="0" selected>Select book</option>
            @foreach (var book in Model.AllBooks)
            {

                if (Model.AuthorBook.BookId == book.Id)
                {
                    <option selected value="@book.Id"> @book.Title </option>
                }
                else
                {
                    <option value="@book.Id"> @book.Title </option>
                }
            }
        </select>
        <span class="text-danger" asp-validation-for="@Model.AuthorBook.BookId"></span>
    </div>

    <div>
        <span class="text-danger"> @ViewBag.Error </span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Submit</button>

    <div class="text-danger" asp-validation-summary="All">

    </div>
</form>
