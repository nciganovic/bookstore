@model IEnumerable<GetBookDto>

<h1 class="text-center">@ViewBag.Title</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Title</td>
        <td>Page count</td>
        <td>Amount</td>
        <td>Category name</td>
        <td>Date published</td>
        <td>Price</td>
    </tr>

    @foreach (var book in Model)
    {
<tr>
    <td>@book.Id</td>
    <td>@book.Title</td>
    <td>@book.PageCount</td>
    <td>@book.Amount</td>
    <td>@book.CategoryName</td>
    <td>@book.DatePublished</td>
    <td>@book.Price</td>
    <td><a asp-controller="Book" asp-action="EditBook" asp-route-id="@book.Id">Edit</a></td>
    <td><a onclick="return confirm('Do you really want to delete this item ?')"
   asp-controller="Book" asp-action="DeleteBook" asp-route-id="@book.Id"> Delete </a></td>
</tr>
     }
</table>

<a class="text-light btn btn-success" asp-controller="Book" asp-action="CreateBook"> Create book </a>

