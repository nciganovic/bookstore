@model EditUserViewModel
@{
    ViewBag.Title = "Edit user";
}

<h1 class="text-center">Edit user</h1>

<form asp-controller="User" asp-action="EditUser" method="post">
    <input type="hidden" asp-for="@Model.Person.Id" />

    <div class="form-group">
        <label asp-for="@Model.Person.FirstName"></label>
        <input class="form-control" asp-for="@Model.Person.FirstName" value="@Model.Person.FirstName" />
        <span class="text-danger" asp-validation-for="@Model.Person.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Person.LastName"></label>
        <input class="form-control" asp-for="@Model.Person.LastName" value="@Model.Person.LastName" />
        <span class="text-danger" asp-validation-for="@Model.Person.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input disabled class="form-control" asp-for="@Model.Id" value="@Model.Id" />
        <span class="text-danger" asp-validation-for="@Model.Id"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.UserName"></label>
        <input class="form-control" asp-for="@Model.UserName" value="@Model.UserName" />
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input class="form-control" asp-for="@Model.Email" value="@Model.Email" />
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit</button>

    <div class="text-danger" asp-validation-summary="All">

    </div>
</form>

<div class="mt-3">
    <h3>Roles</h3>
    <ul class="list-group">
        @if (Model.Roles.Any())
        {
            @foreach (var role in Model.Roles)
            {
                <li class="list-group-item">@role</li>
            }
        }
        else
        {
            <li class="list-group-item">Not any roles yet.</li>
        }
    </ul>
    <a asp-controller="User" asp-action="EditUserRoles" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Change roles</a>
</div>


<div class="mt-3">
    <h3>Claims</h3>
    <ul class="list-group">
        @if (Model.Claims.Any())
        {
            @foreach (var claim in Model.Claims)
            {
                <li class="list-group-item">@claim</li>
            }
        }
        else
        {
            <li class="list-group-item">Not any claims yet.</li>
        }
    </ul>
    <a href="#" class="btn btn-warning mt-3">Change claims</a>
</div>
