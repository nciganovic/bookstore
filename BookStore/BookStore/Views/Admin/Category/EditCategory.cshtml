@model Category

<h1 class="text-center">Create new author</h1>

<form asp-controller="Category" asp-action="EditCategory" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input class="form-control" asp-for="@Model.Name" value="@Model.Name"/>
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3">Submit</button>

    <div class="text-danger" asp-validation-summary="All">

    </div>
</form>
