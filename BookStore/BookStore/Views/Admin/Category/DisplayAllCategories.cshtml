@model IEnumerable<Category>

<h1 class="text-center">@ViewBag.Title</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Category name</td>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td><a asp-controller="Category" asp-action="EditCategory" asp-route-id="@category.Id">Edit</a></td>
            <td><a onclick="return confirm('Do you really want to delete this item ?')"
                    asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id"> Delete </a></td>
        </tr>
     }
</table>

<a class="text-light btn btn-success" asp-controller="Category" asp-action="CreateCategory"> Create category </a>

