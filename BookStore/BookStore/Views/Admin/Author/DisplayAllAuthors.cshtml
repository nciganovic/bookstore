@model IEnumerable<GetAuthorDto>

<h1 class="text-center">@ViewBag.Title</h1>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Artist name</td>
        <td>Person Id</td>
        <td>Full name</td>
    </tr>

    @foreach (var author in Model)
    {
    <tr>
        <td>@author.Id</td>
        <td>@author.ArtistName</td>
        <td>@author.PersonId</td>
        <td>@author.FullName</td>
        <td><a asp-controller="Author" asp-action="EditAuthor" asp-route-id="@author.Id">Edit</a></td>
        <td><a onclick="return confirm('Do you really want to delete this item ?')"
   asp-controller="Author" asp-action="DeleteAuthor" asp-route-id="@author.Id"> Delete </a></td>
    </tr>
     }
</table>

<a class="text-light btn btn-success" asp-controller="Author" asp-action="CreateAuthor"> Create author </a>

